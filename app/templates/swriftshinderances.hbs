{{page-title 'SWRIFTS Hinderances'}}
<h1>SWRIFTS Hinderances</h1>

<div class="edgrow">
{{#each model.hinderances as |hind|}}
    <div class="edgcol">
        <h3 class="txthding">{{hind.name}}</h3>
        <p>{{hind.description}}</p>
		<p><strong>Type:</strong> {{hind.type}}</p>
		<p><strong>Book:</strong> {{hind.book_reference}}</p>
		<p><strong>Pre Requisites:</strong><br />
			<ul>
				{{#each-in hind.pre-reqs as |k v|}}
					{{#each-in v as |j l|}}
						<li class="prereq"><strong>{{j}}</strong>:  {{l}} </li>
					{{/each-in}}
				{{else}}
					<li>None</li>
				{{/each-in}} 
			</ul>
		</p>		
    </div>
{{/each}}
</div>

