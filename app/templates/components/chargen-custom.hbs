	<div id="swrifts-sheet" class="tab-pane fade in">          
		<div class="row">
			<div class="col-sm-9">
				<div class="form-group row">
					 <div class="col-sm-3">
						<span class="heading">Iconic Framework</span> 
					 </div>
					 <div class="col-sm-9">
						<PowerSelect @selected={{char.custom.chariconicf}} @options={{this.swiconicfsel}}  @onchange={{action "iconicfChanged"}} as |icf|>
						  {{icf}}
						</PowerSelect>	
					 </div>			 
				</div>
				<div class="form-group row">
					<div class="col-sm-3">
						<span class="heading">Race</span> 
					 </div>
					 <div class="col-sm-9">
						<PowerSelect @selected={{char.custom.charrace}} @options={{this.swracesel}}  @onchange={{action "raceChanged"}} as |icf|>
						  {{icf}}
						</PowerSelect>	
					</div>			 
				</div>
			</div>
			<div class="col-sm-3">
				<p> Counter information goes here </p>
				<p> {{{ansi-format text=char.custom.cgpoints}}} </p>
				
                 {{#each-in char.custom.cgpoints as |key demo|}}
                 <div class="form-group row">
                     <div class="col-sm-3">
                             <b>{{demo[0]}}</b> 
                     </div>
                     <div class="col-sm-9">
                             <Input @type="text" @size={{25}} @value={{key}} />
                     </div>
                 </div>
                 {{/each-in}}				
			</div>
		</div>		
	</div> 