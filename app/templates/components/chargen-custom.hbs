	<div id="swrifts-sheet" class="tab-pane fade in">          
		<div class="row">
			<div class="col-sm-9">
				<div class="form-group row">
					 <div class="col-sm-3">
						<span class="heading">Iconic Framework</span> 
					 </div>
					 <div class="col-sm-9">
						<PowerSelect @selected={{char.custom.chariconicf}} @options={{this.swiconicfsel}}  @onchange={{action "iconicfChanged"}} as |icf|>
						  {{icf}}
						</PowerSelect>	
					 </div>			 
				</div>
				<div class="form-group row">
					<div class="col-sm-3">
						<span class="heading">Race</span> 
					 </div>
					 <div class="col-sm-9">
						<PowerSelect @selected={{char.custom.charrace}} @options={{this.swracesel}}  @onchange={{action "raceChanged"}} as |icf|>
						  {{icf}}
						</PowerSelect>	
					</div>			 
				</div>
			</div>
			<div class="col-sm-3">
				<p class="txthding"> CGen Points Available </p>
                 {{#each-in char.custom.cgpoints as |key counter|}}
                 <div class="form-group row">
                     <div class="col-sm-9">
                             <b>{{key}}</b> 
                     </div>
                     <div class="col-sm-3">
                             <Input @type="text" disabled={{this.entryNotAllowed}} @size={{4}} @value={{counter}} />
                     </div>
                 </div>
				 {{else}}
                 <div class="form-group row">
                     <div class="col-sm-12">
						Nothing here
					</div>
				  </div>
                 {{/each-in}}					
			
			</div>
		</div>		
	</div> 