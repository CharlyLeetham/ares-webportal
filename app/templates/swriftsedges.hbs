{{page-title 'SWRIFTS Edges'}}
<h1>SWRIFTS Edges</h1>

<h2>Edge</h2>

<div class="row">
{{#each model.edges as |edge|}}
    <div class="col">
        <h2>{{edge.name}}</h2>
        <p>{{edge.description}}</p>
		<p>Pre Requisite:</p>
		{{#each edge.pre-reqs as |k,v|}}
			{{k}}: {{v}}
		{{/each}}<br />	
    </div>
{{/each}}
</div>

